<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kongqw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <com.kongqw.kqwrockerdemo.MyVideo
        android:id="@+id/videoView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <com.kongqw.rockerlibrary.view.RockerView
            android:id="@+id/rockerViewLeft"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            kongqw:areaBackground="@mipmap/button"
            kongqw:rockerBackground="@mipmap/rocker"
            kongqw:rockerRadius="15dp" />


        <TextView
            android:id="@+id/x_text_left"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/rockerViewLeft"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/diraction_text_left"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@id/x_text_left"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/y_text_left"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/diraction_text_left"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF" />

        <com.kongqw.rockerlibrary.view.RockerView
            android:id="@+id/rockerViewRight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            kongqw:areaBackground="@mipmap/button"
            kongqw:rockerBackground="@mipmap/rocker"
            kongqw:rockerRadius="15dp" />


        <TextView
            android:id="@+id/diraction_text_right"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@id/rockerViewRight"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/length_text_right"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/diraction_text_right"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</RelativeLayout>